<script>
  let li = document.querySelectorAll("#lists > li");
  let sendBtn = document.getElementById("send");
  let textResp = document.getElementById("msg");
  let limit = 0;
  let msg;
  let resp = undefined;
  li[0].addEventListener("click", () =>{
    if(resp===undefined){
    li[1].style.backgroundColor = "#999";
    resp = "No prro";
    } 
  })
  li[1].addEventListener("click", () =>{
    if(resp===undefined){
    li[0].style.backgroundColor = "#999";
    resp = "Simios";
    } 
  })
  sendBtn.addEventListener("click", () =>{
    if(resp !== undefined){
      limit++;
      if(limit == 1){
        msg = textResp.value;
        Email.send({
        Host : "smtp.elasticemail.com",
